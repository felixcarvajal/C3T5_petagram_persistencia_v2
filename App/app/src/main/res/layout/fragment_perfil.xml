<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/card_view_margin"
    tools:context="com.dama.fcarvajal.materialdesign.vista.fragment.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/fragment_imgMascota"
        android:layout_width="@dimen/mascota_height_detalle"
        android:layout_height="@dimen/mascota_height_detalle"
        android:layout_alignParentLeft="true"
        android:src="@drawable/dog_bruto"
        android:layout_gravity="center_horizontal"
        app:civ_border="true"
        app:civ_border_color="@color/accent"
        app:civ_border_width="@dimen/petprofile_borde"
        app:civ_shadow="true"
        app:civ_shadow_color="#463e45"
        app:civ_shadow_radius="3" />

    <TextView
        android:id="@+id/fragment_tvMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pnombre"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/nombre_cardview"/>

    <ImageView
        android:id="@+id/fragment_imgLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/line"
        android:layout_gravity="center_horizontal"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_detalle_mascota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
